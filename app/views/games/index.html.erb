<h1>Games#index</h1>
<h1 class="hero-title text-center">Games </h1>
<section class="container">
  <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-4">
    <%@games.each do |game|%>
    <div class="col mb-4">
      <div class="card border-dark h-100">
        <div class="card-body">
          <h5><%=game.name%></h5>
          <p class="card-text text-secondary"><%=game.description%></p>
              <div class='d-flex justify-content-between'> 
                <%=link_to "See More", games_path(game.id), class: "btn btn-outline-primary"%>
                <h5><%=format_price(game.price)%></h5>
              </div>
        </div>
      </div>
    </div>

    
    <%end%>
  </div>

</section>